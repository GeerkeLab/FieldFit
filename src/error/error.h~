#ifndef __ERROR_H__
#define __ERROR_H__

#include <iostream>

namespace Error
{

	enum class STATUS
	{
		OK = 1,
		FAILED_IO = 2,
	};

	bool FAILED( STATUS status )
	{
		bool result;
		
		switch(status)
		{
		case STATUS::OK:
			result = false;
			break;
		default:
			result = true;
			break;
		}
		
		return result;
	}
	
	void Report( std::ofstream &stream, const std::string &msg )
	{
		#ifdef USE_REPORTING
			
		stream << msg << std::endl;
		
		#endif
	}

	void Warn( std::ofstream &stream, const std::string &msg )
	{
		stream << msg << std::endl;
	}
	
}

#endif