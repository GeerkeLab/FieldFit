local root      = "../../"

solution "fieldfit"

	location( root )
	objdir( root .. "bin/obj/x32/Release" )
	debugdir( root .. "bin/" )
	
	configurations { "Release" }

	platforms { "x32" }

	vectorextensions "SSE2"

	floatingpoint "Fast"	

	warnings "Extra"

	flags "Unicode"	

    configuration "x32"
		targetdir( root .. "bin/x32/" )
		architecture "x32"
		
	configuration "Release"		
		flags "LinkTimeOptimization"
		optimize "Speed"

	configuration "gmake"
		links { "lapack" , "blas" , "lapacke" }
		buildoptions "-Bstatic -std=c++11 -W"
		
	configuration {}

	project "fieldfit"
		targetname "fieldfit"	 
		kind "ConsoleApp"

		includedirs {
			}	
			
		files { 
			root .. "src/*.cpp",
			root .. "src/*.h",
			root .. "src/**.cpp",
			root .. "src/**.h",
			}
